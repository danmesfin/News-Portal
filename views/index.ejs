<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container-fluid py-2 px-2 m-2">
        <div class="row  ">
            <div class="col-md-6 py-3">
              <div class="card" style="width:100%">
                  <img class="card-img-top" src=" <%= post[0].file_src %>" alt="Card image">
                  <div class="card-img-overlay">
                    <h4 class="card-title text-light"><%= post[0].title %></h4>
                    
                    <a href="/read-<%= post[0].POSTID %>&<%= post[0].topicid %>" class="btn btn-primary stretched-link">Read article</a>
                  </div>
                </div>
            </div>
            <div class="col-md-6">
              
              <div class="row py-1 ">
                <div class="py-1"><h4> | RECENT</h4></div>
                <% for (var i =0; i <=2;  i++ ) { %>
                    <!-- <%= post.id %> -->
                  <div class="col-sm-6 py-3">
                      <div class="card" style="width:100%">
                          <img class="card-img-top" src="<%= post[i].file_src %>" alt="Card image">
                          <div class="card-img-overlay">
                            <h4 class="card-title text-light"> <%= post[i].title %></h4>
                            
                            <a href="/read-<%= post[i].POSTID %>&<%= post[i].topicid %>" class="btn btn-secondary">Read more</a>
                          </div>
                        </div>
                  </div> 
                  <% } %>
                
          </div>
          <hr>
          </div>
        </div>        
            <div class="row py-1 m-2">
              <div class="py-1"><h4> | BUISENESS</h4></div>
              <% for (var i =0; i <=2;  i++ ) { %>
                  <!-- <%= post.id %> -->
               
                  <% if( post[i].topicid==1  ){ %>
                <div class="col-sm-3 py-3">
                    <div class="card" style="width:100%">
                        <img class="card-img-top" src="<%= post[i].file_src %>" alt="Card image">
                        <div class="card-img-overlay">
                          <h4 class="card-title text-light"> <%= post[i].title %></h4>
                          <p class="card-title text-light"><%= post[0].postdate %></p>
                          <a href="/read-<%= post[i].POSTID %>&<%= post.topicid %>" class="stretched-link">Read more</a>
                        </div>
                      </div>
                </div> <% } %>
                <% } %>
        </div>
        <div class="row py-1 ">
          <div class="py-1"><h4> | SPORT</h4></div>
          <% for (var i =0; i <=2;  i++ ) { %>
              <!-- <%= post.id %> -->
           
              <% if( post[i].topicid==2  ){ %>
            <div class="col-sm-4 py-3">
                <div class="card" style="width:100%">
                    <img class="card-img-top" src="<%= post[i].file_src %>" alt="Card image">
                    <div class="card-img-overlay">
                      <h3 class="card-title text-light"> <%= post[i].title %></h3>
                      <h5 class="card-title text-light  text-truncate"> <%= post[i].content %></h5>
                      <a href="/read-<%= post[i].POSTID %>&<%= post[i].topicid %>" class="btn btn-secondary stretched-link">Read more</a>
                    </div>
                  </div>
            </div>
            <hr>
             <% } %>
            <% } %>
    </div>
  
      
    </div>

    
</body>
</html>
