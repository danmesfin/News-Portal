<div class="container-fluid py-3">
    <div class="row  ">
        <div class="col-md-8 py-3">
          <div class="card" style="width:100%">
              <img class="card-img-top" src=" <%= post[0].file_src %>" alt="Card image">
              <div class="card-body">
                <h4 class="card-title"><%= post[0].title %></h4>
                <p class="card-text"><%= post[0].content %></p>
                
              </div>
            </div>
        </div>
        <div class="col-md-4">
          
              <div class="row ">
                <% related.slice().forEach((post) => { %>
                    <!-- <%= post.id %> -->
                  <div class="row py-3">
                      <div class="card" style="width:100%">
                          <img class="card-img-top" src="<%= post.file_src %>" alt="Card image">
                          <div class="card-img-overlay">
                            <h4 class="card-title"> <%= post.title %></h4>
                            <p class="card-text"> <%= post.content %></p>
                            <a href="#" class="btn btn-secondary">Read more</a>
                          </div>
                        </div>
                  </div> 
                <% }); %>

            

          </div>
      </div>