<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap">
          <p>  
            ...
          </p> 
         </div>
                  
              <div class="row">
                 <div class="col-md-3"><b>All post</b></div>
                 <div class="col-md-3"><b>All users</b></div>
              </div>
<div class="py-3 px-2"><a class="btn btn-success " href="/newpost">New Post</a></div>
             <div class="col py-5">
                <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Header</th>
                        <th scope="col">Author</th>
                        <th>Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Manage</th>
                      </tr>
                    </thead>
                    <tbody>  <!-- Posts work backwards that means that the posts are reversed -->
                        <% post.slice().forEach((post) => { %>
                            <!-- <%= post.id %> -->
                      <tr>
                        <th scope="row"><%= post.POSTID %></th>
                        <td><%= post.title %></td>
                        <td><%= post.author %></td>
                        <td><%= post.postdate %></td>
                        <td><%= post.topicid %></td>
                        <td> <a class="btn btn-success" href="/publish-<%= post.POSTID %>">publish</a>
                             <a class="btn btn-warning" href="/edit-<%= post.POSTID %>">Edit</a>
                             <a href="/delete/<%= post.POSTID %>" class="btn btn-danger">Delete</a>
                             </td>
                      </tr> <% }); %>
                      
                  </table>     
                   <br>
               


    
             </div>

   
</main>