<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap">
    <p>  
        ...
    </p> 
    </div>
    
    <div class="container" style="width: 800px;">
    
            <form action="createpost" method="post" enctype="multipart/form-data">
                <div class="row py-1">
                    <label><b>Admin Id</b></label>
                    <input type="text" name="author" value="1" class="text-input">
                </div>
                <div class="row py-1">
                    <label><b>Title</b></label>
                    <input type="text" name="title" value="" class="text-input">
                </div>
                <div class="row py-1">
                    <label><b>Topic</b></label>
                    <select name="topicid" class="text-input">
                        <option value=""></option>
                                <option selected value="1">Sport</option>
                                <option value="2">Politics</option>
                                <option value="3">Buiseness</option>
                                <option value="4">Entertainment</option>
                                <option value="5">Health</option>
                    </select>
                </div>
                <div class="row py-1">
                    <label><b>Image</b></label>
                    <input type="file" name="image" accept='image/*'>
                </div>
                 <div class="row">
                    <label class="py-1"><b>Body</b></label>
                    <textarea name="content" id="editor" value="">
                    </textarea>
                </div>
                    <p><input type="submit" value="upload"></p>
            </form>
    </div>
    
    <script>
            ClassicEditor
                .create( document.querySelector( '#editor' ) )
                .catch( error => {
                    console.error( error );
                } );
        </script>
    
    
       
    </main>